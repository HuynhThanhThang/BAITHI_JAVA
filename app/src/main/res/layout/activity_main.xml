<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tooo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#86af49"
        android:popupTheme="@style/AppTheme"></android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TableRow
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageVieww"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_gravity="left"
                android:layout_marginRight="20dp"
                android:layout_weight="0"
                android:src="@drawable/avatar" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/editnhap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:maxEms="25"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:hint="Add Name"
                    android:fontFamily="RobotoThinItalic.ttf"
                    android:textColor="#86af49"
                    android:textColorHint="#86af49"
                    android:textSize="20sp" />


            </TableRow>

        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TableRow android:gravity="left">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/call" />

            <EditText
                android:id="@+id/editphone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Add Phone"
                android:lines="1"
                android:textColor="#86af49"
                android:textColorHint="#86af49"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:gravity="left">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/calendar" />

            <EditText
                android:id="@+id/editdate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Add Birthday"
                android:lines="1"
                android:textColor="#86af49"
                android:textColorHint="#86af49"
                android:textSize="20sp" />
        </TableRow>
        <TableRow android:gravity="left">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/mail" />

            <EditText
                android:id="@+id/editemail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Add Email"
                android:lines="1"
                android:textColor="#86af49"
                android:textColorHint="#86af49"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cancell"
            android:src="@drawable/cancel"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/donee"
            android:layout_marginLeft="50dp"
            android:src="@drawable/done"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
